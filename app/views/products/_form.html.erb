<%= simple_form_for(@product) do |f| %>
<%= f.input :title %>
<%= f.input :location %>
<%= f.input :photos, as: :file, input_html: { multiple: true } %>
<%= f.input :fabric, collection: Product::FABRICS %>
<%= f.input :color, collection: Product::COLORS %>
<%= f.input :price %>
<%= f.input :description %>
<%= f.input :condition, collection: Product::CONDITIONS %>
<%= f.input :weight %>
<%= f.input :quantity %>
<%= f.button :submit %>
<% end %>
