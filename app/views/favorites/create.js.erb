(() => {
  const productId = "<%= @product.id%>"
  const favoriteId = "<%= @favorite.id%>"



const productCard = document.querySelector( `#product-${productId}` )
console.log(productCard)

const heart = productCard.querySelector(".fa-heart")
const heartLink = productCard.querySelector(".fav")
heartLink.href = `/favorites/${favoriteId}`
heartLink.dataset.method = "delete"
heart.classList.remove("far")
heart.classList.add("fas")
heart.style.color = "red"
console.log(heart)
})()


